<%= render "shared/error_messages", :target => @user %>
<div class="row">
    <div class="span4 offset4">
        <%= form_for @user, :html => { :class => 'well' } do |f| %>
        <fieldset>
            <legend class="span3"><%= t('.header') %></legend>
            <div class="control-group span3">
                <%= f.label t('.login'), :class => 'control-label' %>
                <%= f.text_field :login, :class => 'span3' %>
            </div>
            <div class="control-group span3">
                <%= f.label t('.email'), :class => 'control-label' %>
                <%= f.text_field :email, :class => 'span3' %>
            </div>
            <div class="control-group span3">
                <%= f.label t('.password'), :class => 'control-label' %>
                <%= f.password_field :password, :class => 'span3' %>
            </div>
            <div class="control-group span3">
                <%= f.label t('.password_confirmation'), :class => 'control-label' %>
                <%= f.password_field :password_confirmation, :class => 'span3' %>
            </div>
            <div class="control-group span3">
                <%= f.label t('.prefer_lang'), :class => 'control-label' %>
                <%= f.select :prefer_lang, {t('defaults.english') => :en, t('defaults.spanish') => :es}, {:selected => locale}, { :class => 'span3' }  %>
            </div>
            <div class="control-group span1 offset1">
                <%= f.submit t('.register'), :class => 'btn btn-success' %>
            </div>
        </fieldset>
        <% end %>
    </div>
</div>
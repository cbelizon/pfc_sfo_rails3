<% if @match_general.in_play? %>
<div class="in-play">
  <%= image_tag("in_play.gif") %>
  <div class="countdown">
    <span class="seconds"></span>
    <span><%= t('reload') %></span>
  </div>
</div>
<% end %>
<table class="match-information table table-striped table-bordered">
  <thead>
    <tr>
      <th>
        <%=  t('.local')%>
      </th>
        <th>
          <%= t('.guest') %>
        </th>
    </tr>
    <tr>
      <th>
      <%=h(@match_general.local.name) %></th>
      <th>
      <%=  h(@match_general.guest.name) %></th>
    </tr>
    <tr>
      <th>
      <% if @match_general.finished? or @match_general.in_play? %>
      <%= h(@match_general.local_goals_live) %>
      <% end %>
      </th>
      <th>
      <% if @match_general.finished? or @match_general.in_play? %>
         <%= h(@match_general.guest_goals_live) %>
       <% end %>
      </th>
    </tr>
    <% if @match_general.in_play? || @match_general.finished? %>
    <tr>
      <th colspan="2">
        <%= t('.spectators', :spectators => number_with_delimiter(@match_general.spectators, :delimiter => '.')) %>
      </th>
    </tr>
    <% end %>
    <% if @match_general.in_play? %>
    <tr>
      <th colspan="2">
          <%= t('minute', :minute =>  @match_general.minute.to_i.to_s) %>
        </th>
    </tr>
    <% end %>
  </thead>
</table>

<table class="table table-striped table-commentaries">
  <thead>
    <tr>
      <th>
      <%= t('.minute')%>
      </th>
      <th class="action">
      <%=t('.commentarie')%>
    </th>
    </tr>
  </thead>
  <tbody>
  <% if @match_general.finished?  %>
  <tr>
    <td>
    <%= MatchGeneral::MINUTES%>
    </td>
    <td class="action">
    <%= image_tag('whistle.png') %>
    <%= t('action.end_match') %>
    </td>
  </tr>
  <% end %>
  <%= render :partial =>
  'commentarie', :collection => @match_general.
  details.second_time.reverse %>
  <% if @match_general.minute >=
  MatchGeneral::PARTS_TIME %>
  <tr>
    <td>
    <%=  MatchGeneral::PARTS_TIME %>
    </td>
    <td class="action">
    <%= image_tag('whistle.png') %>
    <%= t('action.half_time') %>
    </td>
  </tr>
  <% end %>
  <%= render :partial =>
     'commentarie', :collection => @match_general.
     details.first_time.reverse %>
  <% if @match_general.in_play? or @match_general.finished? %>
  <tr>
    <td>0</td>
    <td class="action">
    <%= image_tag('whistle.png') %>
    <%= t('action.start_match') %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
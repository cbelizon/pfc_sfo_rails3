<table class="table table-striped table-condensed table-bordered">
  <thead>
  <tr>
    <th><%= t('players.position') %></th>
    <th><%=  t('players.name') %></th>
    <th><%=  t('players.surname') %></th>
    <th><%=  t('players.speed') %></th>
    <th><%=  t('players.resistance') %></th>
    <th><%=  t('players.dribbling') %></th>
    <th><%=  t('players.kick') %></th>
    <th><%=  t('players.pass') %></th>
    <th><%=  t('players.recovery') %></th>
    <th><%=  t('players.goalkeeper') %></th>
    <th><%=  t('players.quality') %></th>
    <th><%=  t('players.training') %></th>
  </tr>
</thead>
<tbody>
  <% players.each do |player| %>
    <tr id="player-<%= player.id %>">
      <td><span class="badge badge-info"><%=h player.tactic_position %></span></td>
      <td><span class="badge badge-important"><%=h player.name %></span></td>
      <td><span class="badge badge-important"><%=h player.surname %></span></td>
      <td><span class="badge badge-success"><%=h player.speed %></td>
      <td><span class="badge badge-success"><%=h player.resistance %></td>
      <td><span class="badge badge-success"><%=h player.dribbling %></td>
      <td><span class="badge badge-success"><%=h player.kick %></td>
      <td><span class="badge badge-success"><%=h player.pass %></td>
      <td><span class="badge badge-success"><%=h player.recovery %></td>
      <td><span class="badge badge-success"><%=h player.goalkeeper %></td>
      <td><span class="badge badge-success"><%=h player.quality %></td>
      <% if player.training? %>
        <td><%= rounds_training(player.actual_training) %></td>
      <% else %>
        <td><%= t('clubs.trainings.train_it')%></td>
      <% end %>
    </tr>
    <% unless  player.training? or League.closed_teams? %>
    <tr>
      <td> &nbsp;</td>
      <td> &nbsp; </td>
      <td> &nbsp;</td>
      <td><%= link_to(t('clubs.trainings.training') ,train_ability_club_path(:player_id => player,
          :ability => :speed),
          "method" => :post) %></td>
      <td><%= link_to t('clubs.trainings.training'), train_ability_club_path(:player_id => player,
          :ability => :resistance),
          "method" => :post%></td>
      <td><%= link_to t('clubs.trainings.training'), train_ability_club_path(:player_id => player,
          :ability => :dribbling),
          "method" => :post%></td>
      <td><%= link_to t('clubs.trainings.training'), train_ability_club_path(:player_id => player,
          :ability => :kick),
          "method" => :post%></td>
      <td><%= link_to t('clubs.trainings.training'), train_ability_club_path(:player_id => player,
          :ability => :pass),
          "method" => :post%></td>
      <td><%= link_to t('clubs.trainings.training'), train_ability_club_path(:player_id => player,
          :ability => :recovery),
          "method" => :post%></td>
      <td><%= link_to t('clubs.trainings.training'), train_ability_club_path(:player_id => player,
          :ability => :goalkeeper),
          "method" => :post%></td>
      <td> &nbsp; </td>
      <td> &nbsp; </td>
    </tr>
    <% end %>
  <% end %>
</tbody>
</table>
